{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts", "src/tests/**/*.ts", "src/tests/e2e/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
